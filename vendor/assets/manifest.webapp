{
  "name": "My Accounts",
  "slug": "my-accounts",
  "icon": "favicon-32x32.png",
  "description": "Configuration application for konnectors",
  "source": "https://github.com/cozy/cozy-my-accounts.git@build",
  "developer": {
    "name": "Cozy",
    "url": "https://cozy.io"
  },
  "default_locale": "en",
  "locales": {
    "fr": {
      "description": "Application de configuration pour les konnectors"
    }
  },
  "version": "3.0.3",
  "licence": "AGPL-3.0",
  "permissions": {
    "apps": {
      "description": "Required by the cozy-bar to display the icons of the apps",
      "type": "io.cozy.apps",
      "verbs": ["GET", "POST", "PUT"]
    },
    "konnectors": {
      "description": "Required to get the list of konnectors",
      "type": "io.cozy.konnectors",
      "verbs": ["GET", "POST", "PUT"]
    },
    "accounts": {
      "description": "Required to manage accounts associated to konnectors",
      "type": "io.cozy.accounts",
      "verbs": ["GET", "POST", "PUT"]
    },
    "files": {
      "description": "Required to access folders",
      "type": "io.cozy.files"
    },
    "jobs": {
      "description": "Required to run the konnectors",
      "type": "io.cozy.jobs"
    },
    "triggers": {
      "description": "Required to run the konnectors",
      "type": "io.cozy.triggers"
    },
    "permissions": {
      "description": "Required to run the konnectors",
      "verbs": ["ALL"],
      "type": "io.cozy.permissions"
    }
  },
  "routes": {
    "/": {
      "folder": "/",
      "index": "index.html",
      "public": false
    },
    "/services": {
      "folder": "/services",
      "index": "index.html",
      "public": false
    }
  },
  "intents": [{
    "action": "CREATE",
    "type": ["io.cozy.accounts"],
    "href": "/services"
  }]
}
