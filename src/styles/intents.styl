@require 'settings/palette.styl'
@require 'tools/mixins.styl'
@require 'settings/icons.styl'

:global // @stylint ignore

    @require './lists.styl'
    @require './dialog.styl'

    .coz-service
        display flex
        width 100%
        height 100%

    .col-create-account-intent
        display flex
        flex-grow 1
        flex-direction column
        padding-top 2rem

    .coz-service-loading
    .coz-service-error
        display         flex
        height          100vh
        align-items     center
        justify-content center
        width           100vw
        flex-direction  column

    .coz-service-layout
        display         flex
        flex-direction  column
        align-items     stretch
        height          100vh
        width           100vw

    .coz-service-return
        display         flex
        &--button
            width              24px
            height             24px
            margin             0 0 0 .75em
            border             0
            background-color   transparent
            background-image   embedurl('../assets/sprites/icon-arrow-left.svg')
            background-repeat  no-repeat
            cursor             pointer

    .coz-service-bar
        display           flex
        align-items       center
        flex              0 0 100%
        position          fixed
        z-index           100
        width             100%
        flex-direction    row
        background-color  var(--paleGrey)
        box-shadow        inset 0 -1px 0 0 var(--silver)

        .coz-icon
        h1
        .coz-btn
            margin 0 rem(12)

        .coz-icon
            display         flex
            justify-content center
            align-items     center

            img
                height rem(32)
                width  rem(32)

        h1
            flex            1
            margin          0
            padding         0
            font-size       rem(24)
            line-height     rem(32)
            font-weight     normal

        .coz-btn--close
            height        inherit
            width         inherit
            zoom          1.5
            padding-right 0
            flex          1
            // overide default bg position
            background-position  center right

    .coz-service-content
        flex-grow 1
        display flex
        width calc(100% - 2rem)
        max-height      calc(100vh - rem(32))
        justify-content flex-start
        padding 1rem
        flex-direction column
        align-items center
        overflow-y auto
