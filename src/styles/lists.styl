.section-grid
    padding 0 1rem
    row-gap 1rem

    &:not(.detailed) > div[class*='MuiGrid-grid-xs']
        flex-basis 12.5%
        flex-grow 0

    a
        text-decoration none

    span[class*='MuiListItemText-primary']
        color var(--primaryTextColor)
        font-weight 700

// SquareAppIcon in default mode is as wide as its text (margins included).
// Values are 4.25rem for mobile and 6rem for desktop
// Icon width is 3rem on mobile and 4rem on desktop
// We have to offset that in the detailed mode container to keep icons aligned on the Y axis
// All of this is not to be applied in the dialog mode
.detailed
    padding 0 2rem // (6-4)/2 + 1 = 1, (tile width - icon width) / 2 + base padding

    +small-screen()
        padding 0 1.625rem // (4.25-3)/2 = 0.625, (tile width - icon width) / 2 + base padding

.dialogContentWrapper .section-grid .detailed
    padding 0 1rem

.app-list, .services-list, .shortcuts-list
    appTileSize = 4rem
    appGridGutter = 2rem
    mobileGridGutter = 1rem
    mobileTileSize = 3rem
    white = #fff
    appTileWithGutter = appTileSize + appGridGutter
    detailedAppTileWithGutter = 3 * (appTileSize + appGridGutter) - 2 * appGridGutter
    mobileTileWithGutter = mobileTileSize + mobileGridGutter
    width 100%
    max-width 'calc(%s * 8 + %s * 7 + 4rem)' % (appTileSize appGridGutter) // 8 columns + 7 column gaps + border gaps
    display grid
    grid-template-columns repeat(auto-fill, appTileWithGutter)
    grid-auto-rows minmax(rem(91), auto)
    grid-gap rem(10) 0
    justify-content center

    +small-screen()
        grid-template-columns repeat(auto-fill, mobileTileWithGutter)
        grid-auto-rows minmax(rem(68), auto)
        grid-gap rem(5) 0

    .item-grid-icon
        width rem(16)
        height rem(16)

        +small-screen()
            width rem(12)
            height rem(12)

        &.ghost
            filter saturate(0)

    a
        text-decoration none
        -webkit-tap-highlight-color transparent // https://developer.mozilla.org/en-US/docs/Web/CSS/-webkit-tap-highlight-color

.app-list-wrapper, .services-list-wrapper, .shortcuts-list-wrapper, .failure-wrapper
    max-width 50rem
    transition height 200ms ease

.EmptyServicesListTip
    box-sizing border-box
    width 640px
    max-width 100%
    margin auto
    padding 1rem 2rem

    +small-screen()
        padding 0 1.5rem 1rem 3rem

.EmptyServicesListTip-text
    font-style italic
    padding-left 1rem

    +small-screen()
        padding-left .5rem

.scale-hover
    transition transform 50ms ease

.scale-hover:hover
    transform scale(1.0625)

.section-app-group
    display flex
    align-items flex-start
    height 100%

.section-app-group-icon
    display block

.section-app-group-tile
    width rem(16)
    height rem(16)
    padding 2px

    +small-screen()
        width rem(12)
        height rem(12)
        padding 1px


.item-grid-icon.ghost
    filter saturate(0)

