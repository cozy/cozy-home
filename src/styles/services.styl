@require 'settings/palette.styl'
@require 'tools/mixins.styl'
@require 'settings/icons.styl'

:global // @stylint ignore
    #svg-sprite-content
        position absolute
        width 0
        height 0
        visibility hidden

    @require './lists.styl'
    @require './loading.styl'
    @require './dialog.styl'

    .coz-service-loading
    .coz-service-error
        display         flex
        height          100vh
        align-items     center
        justify-content center
        width           100vw
        flex-direction  column

    .coz-service-layout
        display         flex
        flex-direction  column
        align-items     stretch
        height          100vh
        width           100vw

    .coz-service-return
        display         flex
        &--button
            width              24px
            height             24px
            margin             0 0 0 .75em
            border             0
            background-color   transparent
            background-image   embedurl('../assets/sprites/icon-arrow-left.svg')
            background-repeat  no-repeat
            cursor             pointer

    .coz-service-bar
        display           flex
        align-items       center
        flex              0 0 100%
        position          fixed
        z-index           100
        width             100%
        flex-direction    row
        background-color  paleGrey
        box-shadow        inset 0 -1px 0 0 silver

        .coz-icon
        h1
        .coz-btn
            margin 0 (12/basefont)em

        .coz-icon
            display         flex
            justify-content center
            align-items     center

            img
                height (32/basefont)em
                width  (32/basefont)em

        h1
            flex            1
            margin          0
            padding         0
            font-size       (24/basefont)em
            line-height     (32/basefont)em
            font-weight     normal

        .coz-btn--close
            height        inherit
            width         inherit
            zoom          1.5
            padding-right 0
            flex          1
            // overide default bg position
            background-position  center right

    .coz-service-content-header
        width 100%

    .coz-service-content
        flex    1
        display flex
        max-height      calc(100vh - (32/basefont)em)
        justify-content start
        padding         (16/basefont)em
        flex-direction column
        width 70%
        // width at wich the header "separates" from content to continue its way
        // to the left.
        max-width 68rem
        align-items center
        margin (48/basefont)em auto
