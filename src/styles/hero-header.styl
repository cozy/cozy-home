.hero-header
    padding 3rem 4rem
    +small-screen()
        padding 2rem 4rem

    .hero-avatar
        width 8rem
        height 8rem
        border-radius 50%

        +small-screen()
            width 4.5rem
            height 4.5rem

    .hero-subtitle
        line-height rem(21)
        max-width 50rem

        +small-screen()
            font-size rem(12)
            line-height rem(16)
