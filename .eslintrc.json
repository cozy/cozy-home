{
  "extends": ["cozy-app/react"],
  "plugins": ["import-alias"],
  "rules": {
    "no-param-reassign": "error",
    "promise/no-callback-in-promise": "error",
    "import-alias/import-alias": [
      "error",
      {
        "relativeDepth": 1,
        "aliases": [
          { "alias": "components", "matcher": "^components" },
          { "alias": "config", "matcher": "^config" },
          { "alias": "containers", "matcher": "^containers" },
          { "alias": "locales", "matcher": "^locales" },
          { "alias": "lib", "matcher": "^lib" },
          { "alias": "styles", "matcher": "^styles" },
          { "alias": "test", "matcher": "^test" }
        ]
      }
    ]
  },
  "parserOptions": {
    "project": "tsconfig.json"
  }
}
